<h1><%= type%> Insurances</h1>

<p>
    <% for(var i=0;i< policies.length;i++){%>
    <ul>
        <li> 
            <div>Policy id: <%=policies[i].policy_id%></div>

            Duration of policy is <%=policies[i].duration%> months
            And The The sum value is Rs. <%=policies[i].policyvalue%></li>
        <ul>
            <li>Agent: <%=policies[i].name%>, 
                Contact: <%=policies[i].email%></li>
                <form method="POST" action="/informAgent">
                    <input type="hidden" name="clientid" value= "<%= clientid%>" >
                    <input type="hidden" name="agentid" value= "<%= policies[i].agent_id%>" >
                    <input type="hidden" name="policyid" value= "<%= policies[i].policy_id%>" >
                    <button type="submit" onclick="Notify('<%=policies[i].email%>')" >Interested</button>
                </form>
            </ul>
        </ul>
        <%}%>
    </p>
    <p id="notification"></p>

<script>
    function Notify(email){
        console.log("sent email to "+email);
        document.getElementById("notification").innerHTML="email sent to "+email;
        // document.getElementById('notification').disabled = true;
    }
</script>